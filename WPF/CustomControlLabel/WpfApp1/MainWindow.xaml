<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="80">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <local:CustomLabel Grid.Row="0" x:Name="Lbl" Content="1234567aEx"/>
        <Button Grid.Row="1" Content="LettersCount" Click="LetC"/>
        <Button Grid.Row="2" Content="DigitsCount" Click="DigC"/>
        <Button Grid.Row="3" Content="VowersCount" Click="VowC"/>
    </Grid>
</Window>
