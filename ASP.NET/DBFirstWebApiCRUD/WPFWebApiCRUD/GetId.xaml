<Window x:Class="WPFWebApiCRUD.GetId"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:WPFWebApiCRUD"
        mc:Ignorable="d"
        Title="GetId" Height="200" Width="400" Closing="GetId_OnClosing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock TextAlignment="Center" FontSize="20" VerticalAlignment="Center">Enter here id</TextBlock>
        <TextBox Name="IdTextBox" Grid.Column="1" Margin="20px"></TextBox>
        <Button Click="ButtonBase_OnClick" Grid.Row="1" Grid.ColumnSpan="2" Margin="20px">Ok</Button>
    </Grid>
</Window>
