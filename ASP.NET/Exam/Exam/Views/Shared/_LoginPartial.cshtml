@using Microsoft.AspNetCore.Identity
@using Exam.Areas.Identity.Data

@inject SignInManager<ExamUser> SignInManager
@inject UserManager<ExamUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <li>
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="nav-link btn btn-link text-dark border-0">Logout</button>
        </form>
    </li>
    
    <li>
        <a id="manage" class="primary-btn" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
    </li>
}
else
{
    <li>
        <a class="primary-btn" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li>
        <a class="primary-btn" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}