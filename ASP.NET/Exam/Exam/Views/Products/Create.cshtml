@model CategoriesProductModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Choose category</label>
                <select class="form-control form-select">
                    @foreach (Category item in Model.Categories)
                    {
                        <option name="@item.CategoryId">@item.Name</option>
                    }
                </select>
            </div>

            
            <div class="form-group">
                <label asp-for="@Model.Product.Price" class="control-label"></label>
                <input asp-for="@Model.Product.Price" class="form-control" />
                <span asp-validation-for="@Model.Product.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Product.IssueYear" class="control-label"></label>
                <input asp-for="@Model.Product.IssueYear" class="form-control" />
                <span asp-validation-for="@Model.Product.IssueYear" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Product.Brand" class="control-label"></label>
                <input asp-for="@Model.Product.Brand" class="form-control" />
                <span asp-validation-for="@Model.Product.Brand" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Product.Model" class="control-label"></label>
                <input asp-for="@Model.Product.Model" class="form-control" />
                <span asp-validation-for="@Model.Product.Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

