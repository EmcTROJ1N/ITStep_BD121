@using FileExplorer.Controllers
@model List<FileModel>
@{ Layout = "_Layout"; }

<section class="classtime-section class-time-table spad">
    <div class="container text-center">
        <div class="classtime-table">
            <table id="FilesTable" class="table table-striped table-bordered table-hover">
                @foreach (FileModel file in Model)
                {
                    <tr>
                        <td class="hover-bg ts-item"><input type="checkbox" name="fileCheckBox" value=@file.FullName></td>
                        <td class="hover-bg ts-item"><span>@file.FileName</span></td>
                        <td class="hover-bg ts-item"><span>@file.Extension</span></td>
                        <td class="hover-bg ts-item"><span>@file.Size</span></td>
                        <td class="hover-bg ts-item"><span>@file.CreationDate</span></td>
                    </tr>
                }
            </table>
        </div>
        <div class="container">
            <button class="primary-btn" onclick="redirect()">Cancel</button>
            <form class="container" style="margin: 10px" data-ajax="true" data-ajax-method="post" data-ajax-url="Home/CreateFile/" data-ajax-update="#FilesTable">
                <button class="primary-btn">Create new file</button>
            </form>

            <form class="container" style="margin: 10px" data-ajax="true" data-ajax-method="post" data-ajax-url="./UploadFile/" data-ajax-update="#FilesTable" enctype="multipart/form-data">
                <input required class="form-control" name="files" type="file" multiple="multiple"/>
                <button class="primary-btn" style="margin: 10px">Upload file</button>
            </form>

            <button class="primary-btn" style="margin: 10px" onclick="deleteFiles()">Delete selected files</button>
        </div>
    </div>
</section>