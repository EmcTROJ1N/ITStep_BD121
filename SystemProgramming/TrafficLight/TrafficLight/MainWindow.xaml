<Window x:Class="TrafficLight.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TrafficLight"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid Margin="280 50 280 50">
        <Grid.Background>
            <SolidColorBrush Color="Bisque"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Ellipse Grid.Row="0" x:Name="RedLight" Width="100" Height="100" Fill="Gray" Stroke="Black" StrokeThickness="2"/>
        <Ellipse Grid.Row="1" x:Name="YellowLight" Width="100" Height="100" Fill="Gray" Stroke="Black" StrokeThickness="2"/>
        <Ellipse Grid.Row="2" x:Name="GreenLight" Width="100" Height="100" Fill="Gray" Stroke="Black" StrokeThickness="2"/>
    </Grid>
</Window>
