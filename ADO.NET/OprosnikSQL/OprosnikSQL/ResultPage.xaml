<Page x:Class="OprosnikSQL.ResultPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:OprosnikSQL"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Result" Background="Black">

    <Grid Margin="70">
        <Rectangle Fill="Gray"/>
        <TextBlock Grid.Row="0" x:Name="Result" FontSize="35" Foreground="White" Text="Question" TextAlignment="Center"
                   FontFamily="Impact" TextWrapping="Wrap" Margin="95"/>
    </Grid>
</Page>
